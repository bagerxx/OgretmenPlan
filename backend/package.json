{
  "name": "ogretmen-plan-backend",
  "version": "1.0.0",
  "description": "Öğretmen Planları Backend Sistemi",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "setup:db": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^6.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "^5.7.1",
    "exceljs": "^4.4.0",
    "fastify": "^4.24.3",
    "googleapis": "^133.0.0",
    "nodemailer": "^6.9.13",
    "pdfkit": "^0.15.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
